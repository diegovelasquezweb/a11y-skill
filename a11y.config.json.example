{
  // --- Branding & UI ---
  "reportTitle": "Accessibility Audit Report", // (default) Title shown at the top of the HTML report
  "companyName": "MyCompany", // (default: "") Company name shown in the footer and summary
  "accentColor": "#6366f1", // (default: "#6366f1") Hex color for buttons and highlights

  // --- Scan Scope & Rules ---
  "maxRoutes": 10, // (default: 10) Maximum number of internal pages to discover and scan
  "complianceTarget": "WCAG 2.2 AA", // (default: "WCAG 2.2 AA") Label for the target standard
  "routes": [], // (default: []) Explicit list of paths to scan (e.g., ["/", "/about"])
  "ignoreFindings": [], // (default: []) Rule IDs to hide from the report
  "excludeSelectors": [], // (default: []) CSS selectors to ignore during scan
  "axeRules": {}, // (default: {}) Direct axe-core rule configuration

  // --- Viewport & Emulation ---
  "colorScheme": "light", // (default: "light") Emulate browser theme: "light" or "dark"
  "viewports": [
    // (default: 1280x800 Desktop)
    { "width": 1280, "height": 800, "name": "Desktop" }
  ],

  // --- Visibility & Debugging (Playground) ---
  "headless": true, // (default: true) Set to false to see the browser while it scans
  "playground": false, // (default: false) Set to true to keep browser open after audit
  "slowMo": 0, // (default: 0) Delay in milliseconds between browser actions

  // --- File System ---
  "outputDir": "audit", // (default: "audit") Directory where reports are saved
  "internalDir": "audit/internal" // (default: "audit/internal") Directory for intermediate scan data
}
